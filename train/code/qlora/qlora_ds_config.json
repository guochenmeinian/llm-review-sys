{
    "train_micro_batch_size_per_gpu": 1,
    "gradient_accumulation_steps": 4,
    "optimizer": {
      "type": "AdamW",
      "params": {
        "lr": 2e-5,
        "betas": [0.9, 0.999],
        "eps": 1e-8,
        "weight_decay": 0.01
      }
    },
    "fp16": {
      "enabled": false
    },
    "bf16": {
      "enabled": true
    },
    "zero_optimization": {
      "stage": 2,
      "offload_optimizer": {
        "device": "none"
      },
      "allgather_partitions": true,
      "allgather_bucket_size": 2e8,
      "reduce_scatter": true,
      "reduce_bucket_size": 2e8,
      "overlap_comm": true,
      "contiguous_gradients": true
    }
  }
  